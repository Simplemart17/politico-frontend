{
  "name": "politico-frontend",
  "version": "1.0.0",
  "description": "This Frontend built with React/Redux consumes the Politico App API",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "coverage": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "heroku-postbuild": "rimraf dist && npm run build",
    "start": "node server.js",
    "start:dev": "webpack-dev-server --mode development --open",
    "test": "jest",
    "test:coveralls": "jest -u | coveralls",
    "test:dev": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint-fix",
      "git add --force"
    ],
    "*.jsx": [
      "npm run lint-fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simplemart17/politico-frontend.git"
  },
  "keywords": [
    "politico",
    "news",
    "react/redux"
  ],
  "author": "Martins Aloba",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Simplemart17/politico-frontend/issues"
  },
  "homepage": "https://github.com/Simplemart17/politico-frontend#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^3.0.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "coveralls": "^3.0.3",
    "nyc": "^14.1.1",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "babel-preset-react-app": "^8.0.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "express": "^4.17.0",
    "html-webpack-plugin": "^3.2.0",
    "jest-localstorage-mock": "^2.4.0",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sass-loader": "^7.1.0"
  }
}
